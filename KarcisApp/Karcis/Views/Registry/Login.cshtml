@{
    Layout = null;
}
@section stylesheets{
    <link rel="stylesheet" href="~/css/index.css">
}
<script src="/js/login.js"></script>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/fonts/fonts.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <title>LOGIN</title>
</head>
<body class="loginPage">
    <div class="loginimg">
        <div class="blacklayer"></div>
        <img class="concertimg" src="/images/Login Image.jpg" alt="concert photo" />
    </div>
    <div class="login">
        <div class="logincontainer">
            <h1>LOGIN</h1>
            <form>
                <div class="inputform">
                    <label class="label" for="email">Email</label>
                    <br />
                    <input class="input" type="email" id="email" name="User.UserEmail" />
                </div>
                <div class="inputform">
                    <label class="label" for="password">Password</label>
                    <br />
                    <input class="input"
                           type="password"
                           id="password"
                           name="User.UserPassword" />
                </div>
                <!--
                    <div class="inputform">
                        <input type="checkbox" />
                        <label class="remembermetext">Remember Me</label>
                    </div>
                -->
            </form>
                <button onclick=login() id="loginButton">Login</button>
                <small style="color: red; display: none;" class="LoginAlert">Your email or password are incorrect! If you already registered, don't forget to activate the account first from your email!</small>
                <h4>
                    Don't have an account? <a href="/Registry/Register">REGISTER HERE</a>
                </h4>
            </div>
        </div>
        <div class="logoside">
            <div class="logocontainer">
                <img class="logoimg" src="/images/festglory.jpg" alt="logokarcis.com" />
            </div>
        </div>
    </body>
    </html>
    @section Scripts{
        <script src="~/js/login.js"></script>
    }

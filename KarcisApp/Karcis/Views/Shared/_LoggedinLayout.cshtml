<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Karcis</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/fonts/fonts.css">
    <link rel="stylesheet" href="~/css/site.css?ver=3">
    <script src="https://code.iconify.design/2/2.1.0/iconify.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @using Microsoft.AspNetCore.Http
    @inject IHttpContextAccessor HttpContextAccessor
    @RenderSection("Stylesheets", required: false)
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark p-md-3 background-navbar shadow">
            <div class="container-fluid">
                <a class="navbar-brand logo-navbar" asp-controller="Home" asp-action="Index">
                    <img src="images/Logo Alternate.png" alt="" srcset="">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="mx-auto"></div>
                    <ul class="navbar-nav navigation-bar">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" target="_blank" href="https://wa.me/6285156615076?text=Halo%20Saya%20Ingin%20Bertanya%20Mengenai%20FESTGLORY">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="History" asp-action="Index">Payments</a>
                        </li>
                        @if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "True")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Update Payment</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Registry" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <div id="footer">
        <p class="footerContent">Created by karcis.com IT Team</p>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

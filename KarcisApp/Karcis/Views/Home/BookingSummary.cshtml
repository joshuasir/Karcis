@{
    Layout = null;
}

@model List<TicketViewModel>

<div id="bookingContentContainer">
    <div id="bookingHeader">
        <h1 class="bookingTitle">Booking Summary</h1>
        <span class="iconify" id="closeBookingSummary" onclick="closeBooking()" data-icon="charm:circle-cross"></span>
    </div>
    <div id="bookingBody">
        @foreach (var item in Model)
        {

         @if (item.Qty > 0) {
            <div class="bookingContent">
                <div class="bookingContentLeft">
                    <h2 class="bookingTypeText platinumText">
                        @item.TicketType
                    </h2>
                    <p class="bookingTypePrice platinumText">
                        @item.Qty Ticket @@ @string.Format("Rp {0:#,#}", item.TicketPrice)
                    </p>
                </div>
                <div class="bookingContentRight">
                    <h2 class="bookingTypeTotal platinumText">
                        @string.Format("Rp {0:#,#}", item.TotalPrice)
                    </h2>
                </div>
            </div>
            }
        }
    </div>
    <div id="bookingFooter">
        <a asp-controller="History" asp-action="Index">
            <div class="bookingPaymentButton">
                <p>Proceed to Payment</p>
            </div>
        </a>
    </div>
</div>